# Backend Environment Variables
# NEVER commit this file to version control

# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Database Configuration (Neon Postgres)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aqw_skins
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=true

# JWT Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_here_change_this
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption & Fairness Seeds (CRITICAL - Rotate periodically)
FAIRNESS_SECRET_SEED=your_fairness_seed_change_this_regularly
HMAC_SECRET=your_hmac_secret_for_verification
ENCRYPTION_KEY=your_32_character_encryption_key

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox

# PIX (Brazil) - Integration example
PIX_API_KEY=your_pix_gateway_key
PIX_API_URL=https://api.pixgateway.com

# Currency Conversion API
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Email Service (SendGrid/Mailgun/etc)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@aqw-skins.com
EMAIL_FROM_NAME=AQW Skins

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session & Security
SESSION_SECRET=your_session_secret_here
CSRF_SECRET=your_csrf_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@aqw-skins.com
ADMIN_PASSWORD=change_this_secure_password

# Logs
LOG_LEVEL=info
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# Redis (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Fingerprinting & Anti-Abuse
FINGERPRINT_SECRET=your_fingerprint_secret_key

# Backup & Maintenance
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_DEPOSITS=true
ENABLE_WITHDRAWALS=true
ENABLE_EXCHANGER=true
MAINTENANCE_MODE=false
